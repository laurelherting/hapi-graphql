{
    "name": "hapi-graphql",
    "version": "1.0.0",
    "description": "example for graphql with hapi",
    "main": "index.js",
    "repository": "https://github.com/laurelherting/hapi-graphql.git",
    "author": "Laurel Herting <laurel.herting@gmail.com>",
    "license": "MIT",
    "private": null,
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "eslintConfig": {
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "parser": "flow",
                    "trailingComma": "all",
                    "bracketSpacing": true 
                }
            ]
        }
    },
    "devDependencies": {
        "eslint": "^4.16.0",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-config-prettier": "^2.9.0",
        "husky": "^0.14.3",
        "lint-staged": "^6.1.0",
        "prettier-eslint": "^8.8.1"
    },
    "scripts": {
        "start": "node index.js",
        "lint": "eslint .",
        "precommit": "lint-staged"
    },
    "dependencies": {
        "hapi": "^17.2.0"
    }
}
